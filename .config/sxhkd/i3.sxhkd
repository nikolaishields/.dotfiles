# Logout/reload 
ctrl + alt + super + shift + Escape : {q,r,d}
	i3-msg {exit,restart,kill} && pkill -USR1 -x sxhkd

alt + Escape : {q,r,d}
	i3-msg {exit,restart,kill} && pkill -USR1 -x sxhkd

# Navigation

# QMK support
ctrl + alt + super + shift + {_,shift +}{h,j,k,l}
  i3-msg {focus,move}{left,down,up,right}

# Laptop support
alt + {_,shift +}{h,j,k,l}
  i3-msg {focus,move}{left,down,up,right}

ctrl + alt + super + shift + {_,shift +}{q,w,e,r,t}
  i3-msg {workspace, move container to workspace} {1:dev,2:term,3:web,4:music,5:com}

alt + {_,shift +}{q,w,e,r,t}
  i3-msg {workspace, move container to workspace} {1:dev,2:term,3:web,4:music,5:com}

ctrl + alt + super + shift + a
  i3-msg focus parent

alt + a
  i3-msg focus parent

ctrl + alt + super + shift + f
  i3-msg fullscreen toggle

alt + f
  i3-msg fullscreen toggle

ctrl + alt + super + shift + s
  i3-msg split toggle

alt + s
  i3-msg split toggle


