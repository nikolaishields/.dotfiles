set $mod Mod1

font pango:monospace 8

# startup applications
xec --no-startup-id setterm -blank 0 -powersave off -powerdown 0
exec --no-startup-id xset s off
exec --no-startup-id xset -dpms
exec --no-startup-id nm-applet
exec --no-startup-id xcape -e 'Control_L=Escape'
exec --no-startup-id setxkbmap -option ctrl:nocaps
exec --no-startup-id pgrep -x sxhkd -c $HOME/.config/sxhkd/sxhkdrc $HOME/.config/sxhkd/sxhkdrc_i3 > /dev/null || sxhkd -c $HOME/.config/sxhkd/sxhkdrc $HOME/.config/sxhkd/sxhkdrc_i3 &
exec --no-startup-id i3-msg exec slack
exec --no-startup-id i3-msg exec firefox
exec --no-startup-id i3-msg exec spotify

# Application Window Assignments
for_window [class="signal-desktop"] move to workspace $ws5
for_window [class="Spotify"] move to workspace $ws4
for_window [class="Firefox"] move to workspace $ws3
for_window [class="Slack"] move to workspace $ws5

# window border
default_border pixel 2
default_floating_border pixel 2
# mouse follows focus
focus_follows_mouse yes

# Workspaces
set $ws1 "1:dev"
set $ws2 "2:term"
set $ws3 "3:web"
set $ws4 "4:music"
set $ws5 "5:com"

bar {
        status_command i3status
        strip_workspace_numbers yes
}

