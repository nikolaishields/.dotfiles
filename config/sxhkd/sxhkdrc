# wm independent hotkeys

# Terminal
ctrl + alt + super + shift + Return
  kitty

alt + Return
  kitty

ctrl + alt + super + shift + i; {l,s,w,q}
  rft {lp,ss,sw,ks}

alt + i; {l,s,w,q}
  rft {lp,ss,sw,ks}

# Launcher
ctrl + alt + super + shift + d; {r,w,s}
  rofi -show {run,window,ssh}

alt + d; {r,w,s}
  rofi -show {run,window,ssh}

# Displays
ctrl + alt + super + shift + x; {d,p,l}
  autorandr --load {docked,portable,laptop} && dunstify -i debian-logo "sxhkd config" "Reloaded key bindings"

alt + x; {d,p,l}
  autorandr --load {docked,portable,laptop} && dunstify -i debian-logo "sxhkd config" "Reloaded key bindings"

# Media
F3 + {_,shift}
  pactl set-sink-volume @DEFAULT_SINK@ {+10%,+5%}

F2 + {_,shift}
  pactl set-sink-volume @DEFAULT_SINK@ {-10%,-5%}

F1
  pactl set-sink-mute @DEFAULT_SINK@ toggle

F4
  pactl set-source-mute @DEFAULT_SOURCE@ toggle


