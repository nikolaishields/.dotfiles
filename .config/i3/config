set $mod Mod1

font pango:monospace 8

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# startup applications

exec --no-startup-id i3-msg exec slack
exec --no-startup-id i3-msg exec firefox
exec --no-startup-id i3-msg exec spotify

# Application Window Assignments
for_window [class="signal-desktop"] move to workspace $ws5
for_window [class="Spotify"] move to workspace $ws4
for_window [class="Firefox"] move to workspace $ws3
for_window [class="Slack"] move to workspace $ws5

# window border
default_border pixel 2
default_floating_border pixel 2
# mouse follows focus
focus_follows_mouse yes

# Workspaces
set $ws1 "1:dev"
set $ws2 "2:term"
set $ws3 "3:web"
set $ws4 "4:music"
set $ws5 "5:com"

bar {
        status_command i3status
        strip_workspace_numbers yes
}

